<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="140dp">
        <TextView
            android:id="@+id/digiMessLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="DigiMess"
            android:textColor="@color/Blue"
            android:textSize="27sp"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="280dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@drawable/icon_background"
            android:src="@drawable/baseline_mail_24"
            android:padding="8dp"/>
        <Space
            android:layout_width="8dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/userRegister"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Username"
            android:inputType="textEmailAddress"
            android:textColor="@color/Blue"
            android:textColorHint="@color/Blue"
            android:background="@drawable/widgets_background"
            android:textSize="24sp"
            android:textStyle="italic"
            android:paddingLeft="8dp"
            android:layout_marginRight="60dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="340dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@drawable/icon_background"
            android:src="@drawable/baseline_key_24"
            android:padding="8dp"/>
        <Space
            android:layout_width="8dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/PasswordRegister"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/Blue"
            android:textColorHint="@color/Blue"
            android:background="@drawable/widgets_background"
            android:textSize="24sp"
            android:textStyle="italic"
            android:paddingLeft="8dp"
            android:layout_marginRight="60dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="420dp"
        android:gravity="center">
        <Button
            android:id="@+id/nextButtonRegister"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Log In"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/White"
            android:textSize="24sp"
            android:background="@drawable/customised_button"
            app:backgroundTint="@color/Blue"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="520dp"
        android:gravity="center">
        <TextView
            android:id="@+id/createAccLabel"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Don't Have Account\nCreate One?"
            android:textSize="15sp"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/Blue"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:indeterminateTint="@color/forToast"
            android:visibility="invisible"/>
    </LinearLayout>
</RelativeLayout>