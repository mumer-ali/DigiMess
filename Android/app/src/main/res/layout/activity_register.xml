<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    tools:context=".Register">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="200dp"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Enter your NUST registered email address"
            android:gravity="fill_horizontal"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:textColor="@color/Blue"
            android:textSize="23sp"
            android:fontFamily="sans-serif-condensed"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_marginTop="290dp">
        <ImageView
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@drawable/icon_background"
            android:src="@drawable/baseline_mail_24"
            android:padding="8dp"/>
        <Space
            android:layout_width="8dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/emailInput"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="example@school.edu.pk"
            android:inputType="textEmailAddress"
            android:textColor="@color/Blue"
            android:textColorHint="@color/Blue"
            android:background="@drawable/widgets_background"
            android:textSize="20sp"
            android:textStyle="italic"
            android:paddingLeft="8dp"
            android:layout_marginRight="60dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="400dp">
        <Button
            android:id="@+id/nextButton1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Next"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/White"
            android:textSize="24sp"
            android:background="@drawable/customised_button"
            app:backgroundTint="@color/Blue"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:indeterminateTint="@color/forToast"
            android:visibility="invisible"/>
    </LinearLayout>
</RelativeLayout>